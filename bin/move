#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
display_board(board)
index = ask_user_for_move
while index < 1 || index > 9
  index = ask_user_for_move
end
move(board, index)
display_board(board)
